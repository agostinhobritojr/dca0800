#include <stdio.h> /* para printf e scanf */

int main(void){
  float x1, y1, x2, y2, x3, y3;
  float d12, d23, d13;
  float maior, media, menor;
  x1 = 0; y1 = 0;
  x2 = 0; y2 = 3;
  x3 = 2; y2 = 0;
  
  d12 = sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
  d23 = sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2));
  d13 = sqrt((x3-x1)*(x3-x1)+(y3-y1)*(y3-y1));
  printf("d12 = %d; d23 = %d; d13 = %d\n", d12, d23, d13);
  maior = d13;
  if(d12 > maior){
	maior = d12;
  }
  if(d23 > maior){
	maior = d23;
  }

  menor = d13;
  if(d12 < menor){
	menor = d12;
  }
  if(d23 < menor){
	menor = d23;
  }

  
}

